<%= form_for post do |f| %>
  <%= f.hidden_field :parent_id, value: parent_id %>
  <%= f.hidden_field :ptype, value: FOLDER_TYPE %>

  <%= f.label "Folder Name:" %>
  <%= f.text_field :title, :autofocus=>true, class: 'form-control' %>

  <%= f.label "Folder Subtitle:"%>
  <%= f.text_field :body, placeholder: "(Not required)", class: 'form-control' %>

  <%= f.submit "Save", class: 'btn btn-success' %>
<% end %>